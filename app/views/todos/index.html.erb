<h2>Listing of TODOs</h2>

<%= link_to 'New todo' , new_todo_path %>

<table>
  <tr>
    <td>Name</td>
    <td>Description</td>
    <td>Actions</td>
  </tr>
  <% @todos.each do |todo| %>

  <tr>
    <td><%= todo.name %></td>
    <td><%= todo.description%></td>
    <td><%= link_to 'show' , todo_path(todo) %></td>
    <td><%= link_to 'edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'delete', todo_path(todo), method: :delete %></td>
  </tr>
  <% end %>
</table>
